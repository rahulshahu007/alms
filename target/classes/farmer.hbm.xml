<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

          <hibernate-mapping>
          <class name="user49.Farmer" table="farmer">
          <id name="id">
          <generator class="assigned"></generator>
          </id>
          
          <property name="name"></property>
          <property name="password"></property>
          <property name="location"></property>
          <property name="amount"></property>
          </class>
          
        
          <class name="user49.Labor" table="labor">
          <id name="id">
          <generator class="assigned"></generator>
          </id>
          
         <property name="name"></property>
          <property name="password"></property>
          <property name="gender"></property>
          <property name="dob"></property>
          <property name="location"></property>
          <property name="wages"></property>
          </class>
          
          <class name="user49.Request" table="request">
          <id name="id">
          <generator class="assigned"></generator>
          </id>
          <property name="farmerName"></property>
          <property name="laborName"></property>
          </class>
          
          
          </hibernate-mapping>
          
          
